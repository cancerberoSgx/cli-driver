{
  "name": "cli-driver",
  "version": "0.0.8",
  "description": "like webdriver but for the command line",
  "main": "lib/src/index.js",
  "types": "src/index.d.ts",
  "scripts": {
    "build": "tsc",
    "watch": "tsc --watch",
    "lint": "tslint src/**/*.ts",
    "lint-fix": "tslint --fix src/**/*.ts",
    "test": "npm run build && jasmine",
    "test-nobuild": "jasmine",
    "prepare": "npm run build",
    "postinstall": "npm run build",
    "prepublish": "npm run build",
    "doc": "npm run build && typedoc --options typedoc.js",
    "clean": "find . -name \"node_modules\" -exec rm -rf '{}' +; rm -rf  package-lock.json lib tmp* src/*.d.ts"
  },
  "keywords": [],
  "author": "Sebasti√°n Gurin",
  "license": "ISC",
  "dependencies": {
    "ansi-escape-sequences": "git+https://github.com/cancerberoSgx/ansi-escape-sequences.git#types",
    "node-pty": "git+https://github.com/cancerberoSgx/node-pty.git",
    "shelljs": "^0.8.1"
  },
  "devDependencies": {
    "@types/jasmine": "^2.8.6",
    "@types/node": "^9.6.2",
    "@types/shelljs": "^0.7.8",
    "jasmine": "^3.1.0",
    "serial-jasmine": "^0.1.1",
    "tslint": "^5.9.1",
    "tslint-config-standard": "^7.0.0",
    "typedoc": "^0.11.1",
    "typescript": "^2.8.1"
  }
}
