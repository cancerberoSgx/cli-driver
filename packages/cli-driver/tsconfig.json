{
  "compilerOptions": {
    "target": "es2018",
    "module": "commonjs",
    "lib": [
      "es2016",
      "dom"
    ],
    "outDir": "lib",
    "removeComments": false,
    "preserveConstEnums": true,
    "declaration": true,
    "declarationDir": "lib",
    "sourceMap": true,
    "baseUrl": "./src"
  },
  "include": [
    "src/**/*.ts",
    "spec/**/*.ts",
    "testing/**/*.ts"
  ]
}