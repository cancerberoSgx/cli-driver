{
	"tags": {
		"allowUnknownTags": true
	},
	"source": {
		"include": [
			"lib/src"
		],
		"exclude": [
			"node_modules"
		]
	},
	"plugins": ["plugins/markdown"],
	"templates": {
		"cleverLinks": false,
		"monospaceLinks": false,
		"copyright": "No copyright - knowledge shouldn't be a property",
		"systemName": "cli-driver",
		"systemSummary": "like webdriver but for the command line"
	},
	"opts": {
		"encoding": "utf8",
		"destination": "../../docs/",
		"recurse": true,
		"tutorials": "docs/tutorials",
		"readme": "../../README.md"
	},
	"markdown.hardwrap": true,
	"markdown": {
		"hardwrap": true
	}
}


