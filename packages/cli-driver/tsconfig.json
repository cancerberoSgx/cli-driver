{
  "compilerOptions": {
    "target": "es2018", 
    "module": "commonjs",
    "lib": [
      "es2016",
      "dom"
    ],
    "outDir": "lib",
    "removeComments": false,
    "preserveConstEnums": true,
    "declaration": true,
    "declarationDir": ".",
    "sourceMap": true,
    "inlineSources": true, // Required for debugging NPM published package.
  },
  "include": [
    "src/**/*.ts",
    "spec/**/*.ts"
  ]
}